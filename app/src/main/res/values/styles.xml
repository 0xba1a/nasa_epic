<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="about_title" parent="AppTheme">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="about_content" parent="AppTheme">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="about_layout" parent="AppTheme">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="home_text" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/album_title</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="home_icon" parent="AppTheme">
        <item name="android:textSize">42dp</item>
        <item name="android:textColor">@color/album_title</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <!-- TODO: Handle version problem here -->
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="special_events_title" parent="AppTheme">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="special_events_content" parent="AppTheme">
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="special_events_image" parent="AppTheme">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="special_events_container" parent="AppTheme">
        <item name="android:padding">10dp</item>
    </style>

</resources>
