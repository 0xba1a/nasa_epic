<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/special_events_container"
            android:background="@color/card_bg_color">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title_text"
                style="@style/special_events_title"
                android:textColor="@color/album_title"/>
            <com.eastrivervillage.epic.SquareImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_title_image"
                android:adjustViewBounds="true"
                style="@style/special_events_image" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_content_text"
                style="@style/special_events_content"
                android:textColor="@color/album_sub_title_color"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_view_images"
                    android:text="@string/icon_camera"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:backgroundTint="@color/colorPrimary"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_watch_video"
                    android:text="@string/icon_video_camera"
                    android:textColor="@android:color/white"
                    android:layout_margin="5dp"
                    android:textSize="13sp"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>